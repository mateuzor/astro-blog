---
import Comment from "../../components/Comment.astro";
export function getStaticPaths() {
  return [
    {params: {post: '1'}},
    {params: {post: '2'}},
    {params: {post: '3'}},
  ];
}

const { post } = Astro.params;
---
<div class="page-container">Post, {post}!

  <h4 class="title">Comments</h4>
  <Comment/>
  <div>
    <h5 class="title">LEAVE A REPLY</h5>
    <div class="reply-container">
      <textarea class="text-input" id="w3review" name="w3review" placeholder="Write Comment" rows="4" cols="50"></textarea>
      <button class="submit-button">POST COMMENT</button>
    </div>
  </div>
</div>

<style>
  .page-container {
    padding: 40px;
  }
  .comment-card {
    display: flex;
  }

	.profile-image {
		height: 64px;
		width: 64px;
		border-radius: 50%;
		margin-right: 15px;
	}
  .comment-content {
    display: flex;
    flex-direction: column;
  }
  .comment-details {
    display: flex;
  }
  .author {
    margin-right: 10px;
  }

.title {
  font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-bottom: 1px solid #eaecee;
    padding-bottom: 10px;
    position: relative;
}

  .reply-container {
    display: flex;
    flex-direction: column;
  }

  .text-input {
    background: #fff;
    border: 1px solid #e1e1e1;
    border-radius: 10px;
    font-size: 1rem;
    display: block;
    width: 100%;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    border-radius: 0.25rem;
    transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
  }

  .submit-button {
    margin-top: 20px;
    width: 232px;
    display: inline-block;
    border: 1px solid transparent;
    font-size: 14px;
    font-weight: 500;
    padding: 12px 54px;
    border-radius: 30px;
    color: #fff;
    border: 1px solid #5869da;
    text-transform: uppercase;
    background: #5869da;
    cursor: pointer;
    transition: all .3s linear 0s;
  }
 </style>