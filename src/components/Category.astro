---
import Image from "../components/Image.astro";
import categories from 'data/categories';
---

<h3>Categories</h3>

<div class="container">
    {categories.map((category) => {
        return <a class="link" href={`/categories/${category.name}`}>
        <div class="category-card">
            <Image image={category.image}/>
            <div>
                <strong>{category.titulo}</strong>
                <p class="category-text">{category.conteudo}</p>
            </div>
        </div>
    </a>})}
    
</div>

<style>
.container {
display: flex;
background-color: white;
}

.link {
text-decoration: none;
}

.category-card {
padding: 10px;
display: flex;
align-items: center;
width: 350px;
height:130px;
margin-top: 40px;
background: #F7F7F9;
box-shadow: 0px 10px 15px -3px rgba(0,0,0,0.1);
cursor: pointer;
}
.category-text {
    margin: 10px;
font-size: 12px;
max-width: 200px;
color:#6c757d;
}
.category-image{
height: 64px;
width: 64px;
border-radius: 50%;
margin-right: 15px;
}
.card-content{
display: flex;
flex-direction: column;
}
 </style>
