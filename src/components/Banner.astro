---
import '@fontsource/noto-sans-jp';
import '../styles/global.css';
import GuysReading from '../../public/assets/guy-reading.png'
---
<div class="container">
    <div class="text-container">
        <h2 class="title">Hello, I'm <span>Mateus</span></h2>
        <h3 class="sub-title">Welcome to my blog</h3>
    </div>
    <img src={GuysReading} alt="guy-reading" srcset="">
</div>

<style>
.container {
display: flex;
justify-content: center;
align-items: center;
height: 400px;
background-color: #f1f2f3;
}
.text-container {
display: flex;
justify-content: center;
flex-direction: column;
align-items: center;
}
.title{
    font-family: "Noto Sans JP";
font-size: 50px;
text-align: left;
font-weight: 900;
line-height: 1.2;
margin: 0;
}
.title > span {
color: #5869da;
}
.sub-title{
    font-family: "Noto Sans JP";
text-align: left;
font-size: 42px;
font-weight: 900;
margin: 0;
}
 </style>